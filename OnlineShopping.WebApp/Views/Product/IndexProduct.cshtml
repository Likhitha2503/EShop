@model IEnumerable<OnlineShopping.WebApp.Models.ProductDto>

@{
    ViewData["Title"] = "IndexProduct";



    Pager pager = new Pager();
    int pageNo = 0;
    if (ViewBag.SearchPager != null)
    {
        pager = ViewBag.SearchPager;
        pageNo = pager.CurrentPage;
    }



}
<div align:center>
    <partial name="_pager" model="@pager" />


</div>
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Product List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="Product" asp-action="CreateProduct" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Create New Product</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>

                <th>Product Name</th>
                <th>Category Name</th>
                <th>Price</th>
                <th>Number in Stock</th>
                <th></th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductName</td>

                    <td>@item.Category.CategoryName</td>
                    <td>@item.Price</td>
                    <td>@item.AvailableQuantity</td>

                    <td>
                        <a asp-controller="Product" asp-action="UpdateProduct" asp-route-ProductId="@item.ProductId" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
                        <a asp-controller="Product" asp-action="DeleteProduct" asp-route-ProductId="@item.ProductId" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div> 