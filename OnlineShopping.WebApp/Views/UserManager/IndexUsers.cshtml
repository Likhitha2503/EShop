@model IEnumerable<OnlineShopping.WebApp.Models.Dto.UserManagerDto>
@{
	ViewData["Title"] = "IndexUsers";



	Pager pager = new Pager();
	int pageNo = 0;
	if (ViewBag.SearchPager != null)
	{
		pager = ViewBag.SearchPager;
		pageNo = pager.CurrentPage;
	}
}
<div align:center>
	<partial name="_pager" model="@pager" />


</div>

<br />
<div class="container p-4 border">
	<div class="row pb-2">
		<div class="col">
			<h1 class="text-primary">Users List</h1>
		</div>
		@*<div class="col text-end pt-1">
			<a asp-controller="UserManager" asp-action="CreateUser" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Create New Category</a>
		</div>*@
	</div>

	<table class="table">
		<thead>
			<tr>
				
				<th>
					User Name
				</th>
				
				<th>
				     Email
				</th>
				<th>
					Password
				</th>
				<th>
					Role
				</th>
				<th>
					PhoneNumber
				</th>
				@*<th>
					ImageUrl
				</th>*@
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.Name</td>
					<td>@item.Email</td>
					<td>@item.Password</td>
					<td>@item.Role</td>
					<td>@item.PhoneNumber</td>
					@*<td>@item.ImageUrl</td>*@
					<td>
						<a asp-controller="UserManager" asp-action="UpdateUser" asp-route-Id="@item.Id" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
					</td>
				</tr>
			}
		</tbody>
	</table>

</div>