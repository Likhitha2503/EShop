@using Microsoft.AspNetCore.Components
@model IEnumerable<OnlineShopping.WebApp.Models.ProductDto>

@{
    ViewData["Title"] = "Index";



    Pager pager = new Pager();
    int pageNo = 0;
    if (ViewBag.SearchPager != null)
    {
        pager = ViewBag.SearchPager;
        pageNo = pager.CurrentPage;
    }
}
<div align:center>
    <partial name="_pager" model="@pager" />


</div>


@*<img class="d-block w-100" src="images/home/slide1.jpg" alt="">*@

<hr />
<div class="row" style="--bs-gutter-x:0">
    @foreach (var product in Model)
    {
        <div class="p-4 col-md-12 col-lg-6">
            <div class="row" style="border-radius:20px; border: 1px solid #ffffff">
                <div class="col-4" style="margin-top:15px;">
                    <img class="d-block w-100" style="border-radius:20px;" src="@product.ImageUrl" alt="First slide" width="50" height="150">
                </div>
                <div class="col-8">
                    <p class="card-title text-warning" style="font-size:xx-large">@product.ProductName</p>
                    <p class="card-text">
                        @((MarkupString)product.ProductDescription)
                    </p>
                </div>
                <div class="col-12">
                    <div class="row pb-3 pt-2">
                        <div class="col-4">
                            <a asp-controller="Home" asp-action="ProductDetails" asp-route-ProductId=@product.ProductId class="btn btn-success form-control btn-block">ProductDetails</a>
                        </div>
                        @*<div class="col text-end pt-1">
                    <a asp-controller="Home" asp-action="ProductDetails" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Product Details</a>
                    </div>*@
                        <div class="col-4">
                            <span class=" pt-1">Category Name : @product.Category.CategoryName </span><br />
                            <span class="">Number in Stock : @product.AvailableQuantity </span><br />
                        </div>
                        <div class="col-4">
                            <span class="text-warning float-end font-weight-bold pt-1" style="font-size:25px;">
                                USD
                                <span style="border-bottom:1px solid #ff6a00">
                                    @product.Price.ToString("c")
                                </span>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

   

</div>